<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>member_login.jsp</welcome-file>
	</welcome-file-list>

 <listener>
		<listener-class>
			com.jerehnet.filters.LoadDataStartup
		</listener-class>
	</listener>
	
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>
			com.jerehnet.filters.SetCharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>img</servlet-name>
		<servlet-class>com.jerehnet.util.AuthImg</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>img</servlet-name>
		<url-pattern>/auth/authImgServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>img2</servlet-name>
		<servlet-class>com.jerehnet.util.AuthImg2</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>img2</servlet-name>
		<url-pattern>/auth/authImg2Servlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>verifycode</servlet-name>
		<servlet-class>com.jerehnet.util.AuthImgVerify</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>verifycode</servlet-name>
		<url-pattern>/auth/verifycodeServlet</url-pattern>
	</servlet-mapping>


	<filter>
		<filter-name>AuthorizationFilter</filter-name>
		<filter-class>
			com.jerehnet.filters.AuthorizationFilter
		</filter-class>
		<init-param>
			<param-name>nologin</param-name>
			<param-value>/nologin.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/market/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/manage/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/market/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/other/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/parts/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/rent/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/usedmarket/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/join/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/fittings/*</url-pattern>
	</filter-mapping>	
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	<error-page>
		<error-code>404</error-code>
		<location>/error.htm</location>
	</error-page>
</web-app>